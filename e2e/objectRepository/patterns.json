  "xpathPatterns": {
    "input": {
      "byName": "//input[@name='{name}']",
      "byId": "//input[@id='{id}']",
      "byPlaceholder": "//input[@placeholder='{placeholder}']",
      "byType": "//input[@type='{type}']",
      "byClass": "//input[contains(@class,'{class}')]",
      "byLabel": "//label[text()='{labelText}']/following-sibling::input",
      "byValue": "//input[@value='{value}']"
    },
    "button": {
      "byText": "//button[text()='{text}']",
      "byContainsText": "//button[contains(text(),'{text}')]",
      "byId": "//button[@id='{id}']",
      "byClass": "//button[contains(@class,'{class}')]",
      "byType": "//button[@type='{type}']",
      "byName": "//button[@name='{name}']",
      "byTitle": "//button[@title='{title}']"
    },
    "dropdown": {
      "selectByText": "//select[@id='{selectId}']//option[text()='{optionText}']",
      "selectByValue": "//select[@id='{selectId}']//option[@value='{optionValue}']",
      "selectByName": "//select[@name='{selectName}']//option[text()='{optionText}']",
      "comboboxOption": "//lightning-base-combobox-item[@data-value='{optionValue}']",
      "comboboxByText": "//lightning-base-combobox-item[.//span[text()='{optionText}']]"
    },
    "salesforce": {
      "tabByName": "//one-app-nav-bar-item-root[@data-id='{tabName}']",
      "fieldByName": "//lightning-input[@field-name='{fieldName}']//input",
      "comboboxButton": "//button[@name='{fieldName}']",
      "recordTypeOption": "//span[text()='{recordType}']/ancestor::lightning-radio-group-option",
      "listViewItem": "//a[@title='{itemTitle}']"
    },
    "text": {
      "byExactText": "//*[text()='{text}']",
      "byContainsText": "//*[contains(text(),'{text}')]",
      "spanByText": "//span[text()='{text}']",
      "labelByText": "//label[text()='{text}']",
      "headingByText": "//h1[text()='{text}'] | //h2[text()='{text}'] | //h3[text()='{text}']"
    },
    "div": {
      "byId": "//div[@id='{id}']",
      "byClass": "//div[contains(@class,'{class}')]",
      "byText": "//div[text()='{text}']",
      "byDataAttribute": "//div[@data-{attribute}='{value}']"
    },
    "link": {
      "byText": "//a[text()='{text}']",
      "byContainsText": "//a[contains(text(),'{text}')]",
      "byHref": "//a[@href='{href}']",
      "byTitle": "//a[@title='{title}']"
    },
    "table": {
      "cellByRowColumn": "//table//tr[{rowIndex}]//td[{columnIndex}]",
      "cellByRowText": "//tr[td[contains(text(),'{rowText}')]]//td[{columnIndex}]",
      "rowByText": "//tr[td[contains(text(),'{cellText}')]]",
      "headerByText": "//th[text()='{headerText}']"
    },
      "form": {
        "fieldsetByLegend": "//fieldset[legend[text()='{legendText}']]",
        "inputInFieldset": "//fieldset[legend[text()='{legendText}']]//*[@name='{fieldName}']",
        "radioByValue": "//input[@type='radio' and @value='{value}']",
        "checkboxByValue": "//input[@type='checkbox' and @value='{value}']"
      },
      "toggle": {
        "byName": "//input[@name='{name}' and @role='switch']",
        "byLabelText": "//label[contains(text(),'{labelText}')]//input[@role='switch']",
        "byAriaLabel": "//input[@aria-label='{ariaLabel}' and @role='switch']",
        "lightningToggle": "//lightning-input[contains(@class,'slds-checkbox_toggle')]//input[@role='switch']",
        "salesforceToggle": "//input[@role='switch' and @type='checkbox']",
        "toggleByText": "//label[contains(text(),'{toggleText}')]//input[@role='switch']"
      }
  }
