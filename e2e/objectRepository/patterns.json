{
  "version": "2.0.0",
  "description": "XPath-Based Object Repository",
  "xpathPatterns": {
    "input": {
      "byName": "//input[@name='{name}']",
      "byId": "//input[@id='{id}']",
      "byPlaceholder": "//input[@placeholder='{placeholder}']",
      "byValue": "//input[@value='{value}']",
      "byType": "//input[@type='{type}']",
      "byClass": "//input[contains(@class,'{class}')]",
      "byAttribute": "//input[@{attribute}='{value}']"
    },
    "button": {
      "byText": "//button[text()='{text}']",
      "byId": "//button[@id='{id}']",
      "byClass": "//button[contains(@class,'{class}')]",
      "byType": "//button[@type='{type}']",
      "byValue": "//button[@value='{value}']",
      "byContainsText": "//button[contains(text(),'{text}')]",
      "byAttribute": "//button[@{attribute}='{value}']"
    },
    "text": {
      "byExactText": "//*[text()='{text}']",
      "byContainsText": "//*[contains(text(),'{text}')]",
      "byTextAndTag": "//{tag}[text()='{text}']",
      "byTextContainsAndTag": "//{tag}[contains(text(),'{text}')]"
    },
    "div": {
      "byId": "//div[@id='{id}']",
      "byClass": "//div[contains(@class,'{class}')]",
      "byText": "//div[text()='{text}']",
      "byContainsText": "//div[contains(text(),'{text}')]",
      "byAttribute": "//div[@{attribute}='{value}']"
    },
    "link": {
      "byText": "//a[text()='{text}']",
      "byContainsText": "//a[contains(text(),'{text}')]",
      "byHref": "//a[@href='{href}']",
      "byId": "//a[@id='{id}']",
      "byClass": "//a[contains(@class,'{class}')]"
    },
    "form": {
      "byId": "//form[@id='{id}']",
      "byClass": "//form[contains(@class,'{class}')]",
      "byAction": "//form[@action='{action}']"
    }
  },
  "pageElements": {
    "loginPage": {
      "usernameField": {
        "primary": "input.byName",
        "parameters": { "name": "username" },
        "fallback": "input.byId",
        "fallbackParams": { "id": "username" },
        "description": "Username input field"
      },
      "passwordField": {
        "primary": "input.byName",
        "parameters": { "name": "password" },
        "fallback": "input.byId",
        "fallbackParams": { "id": "password" },
        "description": "Password input field"
      },
      "loginButton": {
        "primary": "button.byId",
        "parameters": { "id": "submit" },
        "fallback": "button.byText",
        "fallbackParams": { "text": "Submit" },
        "description": "Login submit button"
      },
      "successMessage": {
        "primary": "xpath",
        "locator": "//h1[contains(text(),'Logged In Successfully')]",
        "description": "Success message after login"
      },
      "errorMessage": {
        "primary": "xpath", 
        "locator": "//div[@id='error']",
        "description": "Error message for failed login"
      },
      "logoutButton": {
        "primary": "xpath",
        "locator": "//a[text()='Log out']",
        "description": "Logout button on success page"
      },
      "loginForm": {
        "primary": "form.byId",
        "parameters": { "id": "login" },
        "fallback": "xpath",
        "fallbackLocator": "//form[contains(@class,'login')]",
        "description": "Login form container"
      },
      "pageTitle": {
        "primary": "xpath",
        "locator": "//title[contains(text(),'Test Login')]",
        "description": "Login page title"
      },
      "headerText": {
        "primary": "text.byTextAndTag",
        "parameters": { "tag": "h2", "text": "Test login" },
        "fallback": "xpath",
        "fallbackLocator": "//h2[contains(text(),'Test login')]",
        "description": "Login page header"
      }
    },
    "dashboardPage": {
      "welcomeMessage": {
        "primary": "text.byContainsText",
        "parameters": { "text": "Congratulations" },
        "fallback": "xpath",
        "fallbackLocator": "//p[contains(text(),'Congratulations')]",
        "description": "Welcome message on dashboard"
      },
      "logoutLink": {
        "primary": "link.byText",
        "parameters": { "text": "Log out" },
        "fallback": "link.byContainsText",
        "fallbackParams": { "text": "Log out" },
        "description": "Logout link on dashboard"
      }
    }
  },
  "staticXPaths": {
    "login": {
      "successMessage": "//h1[contains(text(),'Logged In Successfully')]",
      "errorMessage": "//div[@id='error']",
      "logoutButton": "//a[text()='Log out']",
      "usernameField": "//input[@name='username']",
      "passwordField": "//input[@name='password']",
      "submitButton": "//button[@id='submit']"
    },
    "common": {
      "loadingSpinner": "//div[contains(@class,'loading')]",
      "alertMessage": "//div[contains(@class,'alert')]",
      "closeButton": "//button[contains(@class,'close')]"
    }
  }
}
